@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="intro-section" id="intro">
        <div class="intro-section-details">
            <div class="intro-text">
                <h1 class="intro-name">Zach Bray</h1>
                <h3 class="intro-occupation">Full Stack .Net Developer</h3>
            </div>
            <div class="intro-buttons">
                <ul class="intro-buttons-list">
                    <li class="intro-buttons-listitem">
                        <button class="ScrollToSection-Button" href="#about">ABOUT ME</button>
                    </li>
                    <li class="intro-buttons-listitem">
                        <button class="ScrollToSection-Button" href="#contact"> CONTACT ME</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="aboutme-section">
        <div class="aboutme-section-details-container">
            <div class="aboutme-section-details">
                <div class="aboutme-bio">
                    <h3 class="aboutme-section-header">ABOUT ME</h3>
                    <p class="aboutme-paragraph">
                        I am a solution oriented .Net Developer, knowledge seeker, and adventurer with a background in tools/game development. 
                        I enjoy software developing because I am curiosity driven and I love the satisfaction of discovering new technologies and overcoming challenges. 
                        I am motivated by the opportunity that software development gives me to create useful tools that make people's lives easier.
                    </p>
                </div>

                <div class="aboutme-skills">
                    <h3 class="aboutme-skills-header">SKILLS</h3>
                    <ul class="aboutme-list">
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/html5-logo.svg" alt="HTML5 Logo" height="75" width="75"/>
                            <p class="skill-label">HTML</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/css3-logo.svg" alt="CSS Logo" height="75" width="75" />
                            <p class="skill-label">CSS</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/dot-net-logo.svg" alt=".Net Logo" height="75" width="75" />
                            <p class="skill-label">ASP.Net / WPF</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/csharp-logo.svg" alt="C# Logo" height="75" width="75" />
                            <p class="skill-label">C#</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/EFCore-logo.png" alt="Entity Framework Logo" height="75" width="75" />
                            <p class="skill-label">Entity Framework</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/sql-logo.svg" alt="SQL Logo" height="75" width="75" />
                            <p class="skill-label">SQL</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/sqlite-logo.svg" alt="SQLite Logo" height="75" width="75" />
                            <p class="skill-label">SQLite</p>
                        </li>
                        <li class="aboutme-listitem">
                            <img src="Assets/Images/git-logo.svg" alt="Git Logo" height="75" width="75" />
                            <p class="skill-label">Git</p>
                        </li>
                    </ul>
                    <button class="resume-button">RESUME</button>
                </div>
            </div>
        </div>

    </div>
</div>
