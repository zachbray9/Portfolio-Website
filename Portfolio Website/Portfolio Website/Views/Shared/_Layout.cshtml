<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio - @ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Portfolio_Website.styles.css" asp-append-version="true" /> *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Z.B.</a>

            <input type="checkbox" class="hamburger-menu" id="hamburger-menu"/>
            <label for="hamburger-menu" class="hamburger-menu-label">
                <i class="fa-solid fa-bars"></i>
            </label>

            <ul class="navbar-buttons-list">
                <li class="navbar-buttons-listitem">
                    <a class="navbar-buttons-listitem-content" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                </li>
                <li class="navbar-buttons-listitem">
                    <a class="navbar-buttons-listitem-content" href="#about">ABOUT</a>
                </li>
                <li class="navbar-buttons-listitem">
                    <a class="navbar-buttons-listitem-content" href="#projects">PROJECTS</a>
                </li>
                <li class="navbar-buttons-listitem">
                    <a class="navbar-buttons-listitem-content" href="#contact">CONTACT</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-container">
            <a class="social-link" href="https://github.com/zachbray9" target="_blank">
                <img src="Assets/Images/github-logo-white.svg" />
            </a>
            <a class="social-link" href="https://www.linkedin.com/in/zach-bray" target="_blank">
                <img src="Assets/Images/linkedin-logo-white.png"/>
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
